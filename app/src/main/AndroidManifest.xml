<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Used by reminder notification to vibrate -->
    <uses-permission android:name="android.permission.VIBRATE" /> <!-- Used to set all alarm intents again on boot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" /> <!-- Used to schedule exact alarms for reminders -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" /> <!-- Used to send notification, on Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".App"
        android:allowBackup="@bool/allow_backup"
        android:icon="@android:color/transparent"
        android:label="@string/app_name"
        android:roundIcon="@android:color/transparent"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.DayNight"
        tools:ignore="AllowBackup">
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="false" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:label="@string/app_name_short"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.DayNight.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.maltaisn.notes.CREATE" />
                <action android:name="com.maltaisn.notes.EDIT" />
                <action android:name="com.maltaisn.notes.SHOW_REMINDERS" />
            </intent-filter>

            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>
        <activity
            android:name=".ui.notification.NotificationActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:label="@string/app_name_short"
            android:taskAffinity=""
            android:theme="@style/TransparentActivity">
            <intent-filter>
                <action android:name="com.maltaisn.notes.reminder.POSTPONE" />
            </intent-filter>
        </activity>
        <!--
 Receiver is always enabled, even when there is no reminders set.
             This is for simplicity, shouldn't be a concern for battery life.
        -->
        <receiver
            android:name=".receiver.AlarmReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.maltaisn.notes.reminder.ALARM" />
                <action android:name="com.maltaisn.notes.reminder.MARK_DONE" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
                <!-- For HTC devices, apparently (https://stackoverflow.com/a/46294732/5288316) -->
                <action android:name="com.htc.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>
    </application>

</manifest>